{
  "extends": "tslint:recommended",
  "rules": {
    "no-console": false,
    "member-access": false,
    "object-literal-sort-keys": false,
    "ordered-imports": true, 
    "interface-name": false, 
    "strict-null-checks": false, 
    "semicolon": true, 
    "trailing-comma": [true, {
      "singleline": "never",
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "never",
        "typeLiterals": "ignore"
      }
    }],
    "quotemark": [true, "single"],
    "no-trailing-whitespace": [true, "ignore-comments"] 
  }
}